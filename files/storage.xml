<storage-mapping>

  <!-- LFN mappings... -->
  <!-- Direct protocol rules -->
  <lfn-to-pfn protocol="xrootd" destination-match=".*" path-match="/+store/(.*)" result="root://srm.unl.edu//store/$1?mxredir=16"/>
  <lfn-to-pfn protocol="xrootdalt" destination-match=".*" path-match="/+store/(.*)" result="root://xrootd.unl.edu//store/$1?mxredir=16"/>

  <!-- SRM protocol rules. -->
  <!-- All normal transfers -->
  <lfn-to-pfn protocol="srmv2"  destination-match=".*" path-match="/+store/(.*)" result="srm://srm.unl.edu:8443/srm/v2/server?SFN=/mnt/hadoop/user/uscms01/pnfs/unl.edu/data4/cms/store/$1"/>

  <!-- Reverse mappings... -->
  <pfn-to-lfn protocol="direct" destination-match=".*" path-match=".*//(store/.*)" result="/$1"/>
  <pfn-to-lfn protocol="srmv2"  destination-match=".*" chain="direct" path-match=".*\?SFN=(.*)" result="$1"/>

</storage-mapping>
