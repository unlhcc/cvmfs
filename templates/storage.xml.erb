<storage-mapping>

  <!-- LFN mappings... -->
  <!-- xrootd rules -->
  <lfn-to-pfn protocol="xrootd"    destination-match=".*" path-match="/+store/(.*)" result="<%= @xrootd %>"/>
  <lfn-to-pfn protocol="xrootdalt" destination-match=".*" path-match="/+store/(.*)" result="<%= @xrootdalt %>"/>

  <!-- SRM protocol rules. -->
  <lfn-to-pfn protocol="srmv2"  destination-match=".*" path-match="/+store/(.*)" result="<%= @srmv2 %>/store/$1"/>

  <!-- Reverse mappings... -->
  <pfn-to-lfn protocol="srmv2"  destination-match=".*" path-match="<%= @srmv2 %>/(.*)" result="/$1"/>
  <pfn-to-lfn protocol="xrootd" destination-match=".*" path-match=".*//store/(.*)\?(mxredir=16)?" result="/store/$1"/>

</storage-mapping>
